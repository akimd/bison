cat >input <<EOF
toto := 1
toto
EOF
run 0 1
run -noerr 0 1 -s


cat >input <<EOF
a := 1
b := 2
c := 3
d := a + b * c
d
EOF
run 0 7
run -noerr 0 7 -p


cat >input <<EOF
a := 1
b := 2
c := 3
d := (a + b) * c
d
EOF
run 0 9


cat >input <<EOF
1 +
EOF
run 1 'err: -:2.1: syntax error, unexpected end of file, expecting ( or identifier or number'


# LAC finds many more tokens.
cat >input <<EOF
a := 1
d := a + b * c
EOF
run 1 'err: -:3.1: syntax error, unexpected end of file'


cat >input <<EOF
a := 072101108108111044032119111114108100033
a
EOF
