m4_define([AT_REQUIRE_CXX_STD],
[AT_DATA([check.cc],
[[int main ()
{
#if !defined __cplusplus || __cplusplus < ]m4_case([$1],
    [98], [199711],
    [03], [199711],
    [11], [201103],
    [14], [201402],
    [17], [201703],
    [20], [202002],
    [2b], [202100],
    [m4_fatal([$0: invalid arguments: $@])])[
